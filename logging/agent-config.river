logging {
  level  = "info"
}

loki.write "default" {
    endpoint {
        url = "http://loki:3100/loki/api/v1/push"
    }
}

local.file_match "backend" {
  path_targets = [
    { path = "/var/log/myapp/backend/*.log" },
  ]
}

loki.source.file "backend_logs" {
  targets    = local.file_match.backend.targets
  forward_to = [loki.write.default.receiver]
}

loki.process "backend" {
  stage.json {
      expressions = {
        timestamp     = "timestamp",
        level         = "level",
        correlationId = "correlationId",
        action        = "action",
        userId        = "userId",
        message       = "message",
      }
    }

  stage.labels {
    values = {
      source        = "backend",
      level         = "${level}",
      correlationId = "${correlationId}",
      action        = "${action}",
      userId        = "${userId}",
    }
  }

  forward_to = [loki.relabel.backend.receiver]
}

loki.relabel "backend" {
  forward_to = [loki.write.default.receiver]

  rule {
        action       = "replace"
        target_label = "job"
        replacement  = "backend"
  }
}
